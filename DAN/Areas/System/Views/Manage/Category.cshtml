@model IEnumerable<DAN.Models.Category>
@{
    ViewBag.Title = "Danh sách danh mục";
}
<div class="container">
    <div class="row info">
        <div class="title">Danh sách danh mục</div>
        <a href="AddCategory"><button class="btn btn-success">Thêm mới</button></a>
        @if (Model.Count() == 0)
        {
            <div class="error">Chưa có danh mục nào</div>
        }
        else
        {
            <div id="result"></div>
            foreach (var cat in Model)
            {
                <div class="detail">Danh mục: @cat.Cname (@cat.Products.Where(e => e.CId == cat.CId).Count() SP) | <a href="EditCategory/@cat.CId/edit">Sửa</a> | <a href="#" onclick="deleteCat(@cat.CId,'@cat.Cname')">Xóa</a></div>
            }
        }
    </div> 
</div>

