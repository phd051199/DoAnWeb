@model UserViewModel
@{
     ViewBag.Title = "Sửa tài khoản ";
}
<div class="container">
    <div class="row info">
        <div class="title">Sửa tài khoản</div>
        @using (Html.BeginForm("EditUser", "Manage", FormMethod.Post, new { @class = "my-form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(e => e.Uname, new { @value = Model.Uname })
            @Html.LabelFor(e => e.Uname)
            @Html.ValidationMessageFor(e => e.Uname)
            @Html.TextBoxFor(e => e.Uname, new { @value = Model.Uname })
            @Html.LabelFor(e => e.Upass)
            @Html.ValidationMessageFor(e => e.Upass)
            @Html.PasswordFor(e => e.Upass)
            @Html.LabelFor(e => e.Upass)
            @Html.PasswordFor(e => e.Rpass)
            @Html.ValidationMessageFor(e => e.Rpass)
            <button>Lưu thay đổi</button>
        }
    </div>
</div>

