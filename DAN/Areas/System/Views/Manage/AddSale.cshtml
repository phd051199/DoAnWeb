@model SaleViewModel
@{
    ViewBag.Title = "Thêm tin tức khuyến mãi";
}
<div class="container">
    <div class="row info">
        <div class="title">Thêm tin khuyến mãi</div>
        @using (Html.BeginForm("AddSale", "Manage", FormMethod.Post, new { @class = "my-form" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.LabelFor(e => e.Title)
            @Html.ValidationMessageFor(e => e.Title)
            @Html.TextBoxFor(e => e.Title)
            @Html.LabelFor(e => e.Content)
            @Html.ValidationMessageFor(e => e.Content)
            @Html.TextAreaFor(e => e.Content,new {style = "width:50% !important;height: 100px ;"})
            <button>Thêm mới</button>
        }
    </div>
</div>

