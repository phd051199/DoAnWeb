@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<table align="center">
    <h2 style=" text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td> Họ tên độc giả: </td>
            <td>@Html.TextBox("HotenDG")</td>
            @ViewData["Loi1"]
        </tr>
        <tr style="height:40px">
            <td> Tên đăng nhập: </td>
            <td>@Html.TextBox("TenDN")</td>
            @ViewData["Loi2"]
        </tr>
        <tr style="height:40px">
            <td> Mật khẩu: </td>
            <td>@Html.Password("Matkhau")</td>
            @ViewData["Loi3"]
        </tr>
        <tr style="height:40px">
            <td> Giới tính: </td>
            <td>@Html.TextBox("Gioitinh")</td>
            @ViewData["Loi4"]
        </tr>
        <tr style="height:40px">
            <td> Địa chỉ: </td>
            <td>@Html.TextBox("Diachi")</td>
            @ViewData["Loi6"]
        </tr>
        <tr style="height:40px">
            <td> Email: </td>
            <td>@Html.TextBox("Email")</td>
            @ViewData["Loi5"]
        </tr>
        <tr style="height:40px">
            <td> Điện thoại: </td>
            <td>@Html.TextBox("Dienthoai")</td>
            @ViewData["Loi7"]
        </tr>
        <tr style="height:40px">
            <td> Ngày sinh: </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td> Ảnh đại diện: </td>
            <td>
                <input type="file" name="Image" style="width:100%" />
            </td>
        </tr>
        <tr style="height:40px">
            <td> Ngày sinh: </td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>
