@model IEnumerable<WebTinTucFinal.Models.BAIDANG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h2>TRANG CHỦ</h2>
<div class="content_top">
    <div class="row top5news">

        <!-- BÀI ĐĂNG MỚI NHẤT_TOP1 -->
        <div class="col-lg-6 col-md-6 col-sm6 newsstop1">
            <div class="latest_slider">
                <!-- Set up your HTML -->
                <div class="slick_slider">
                    <div class="single_iteam">
                        @foreach (var item123 in Model)
                        {
                            <a class="slider_tittle" title="@item123.TenBaiDang" href="/Doc-bao/@item123.UrlRequire-@item123.IDBaiDang" target="_blank">
                                <img class="img_top1_home" src="@item123.AnhDaiDien" alt="img">
                                <h4>
                                    @item123.TenBaiDang
                                </h4>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div> <!-- End content top latest slider -->
        <!-- BÀI ĐĂNG MỚI NHẤT_TOP từ 2 đến 4 -->
        <div class="col-lg-6 col-md-6 col-sm6 newsstop1">
            <div class="content_top_right">
                <ul class="featured_nav wow fadeInDown">

                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="/Doc-bao/@item.UrlRequire-@item.IDBaiDang" title="@item.TenBaiDang" target="_blank">
                                <img class="img_topn_home" src="@item.AnhDaiDien" alt="@item.TenBaiDang">
                                <div class="title_caption">
                                    @item.TieuDe
                                </div>
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>


